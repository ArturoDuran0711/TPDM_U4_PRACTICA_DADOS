<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="50dp"
    android:background="@drawable/fono1"
    tools:context=".MainActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="JUEGO DE DADOS"
        android:textSize="30dp"
        android:layout_gravity="center"
        />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:src="@drawable/dadoportada"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RONDA 1"
            android:textSize="20dp"
            android:layout_gravity="left"
            android:id="@+id/ronda"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="INICIAR"
            android:id="@+id/iniciar"
            android:layout_gravity="center"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TURNOS"
            android:id="@+id/turno"
            android:layout_gravity="right"
            android:layout_marginLeft="10dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="JUGADOR 1"
            android:textSize="15dp"
            android:layout_gravity="left"
            />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/d0"
            android:layout_gravity="center"
            android:id="@+id/j1d1"
            android:layout_marginLeft="10dp"
            />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/d0"
            android:layout_gravity="center"
            android:id="@+id/j1d2"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="right"
            android:layout_marginLeft="10dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tiro 1: 0"
                android:textSize="10dp"
                android:id="@+id/j1t1"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tiro 2: 0"
                android:textSize="10dp"
                android:id="@+id/j1t2"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tiro 3: 0"
                android:textSize="10dp"
                android:id="@+id/j1t3"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tiro 4: 0"
                android:textSize="10dp"
                android:id="@+id/j1t4"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total: 0"
                android:textSize="10dp"
                android:id="@+id/j1total"
                />

        </LinearLayout>
    </LinearLayout>

    <!--JUGADOR 2 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="JUGADOR 2"
            android:textSize="15dp"
            android:layout_gravity="left"
            />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/d0"
            android:layout_gravity="center"
            android:id="@+id/j2d1"
            android:layout_marginLeft="10dp"
            />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/d0"
            android:layout_gravity="center"
            android:id="@+id/j2d2"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="right"
            android:layout_marginLeft="10dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tiro 1: 0"
                android:textSize="10dp"
                android:id="@+id/j2t1"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tiro 2: 0"
                android:textSize="10dp"
                android:id="@+id/j2t2"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tiro 3: 0"
                android:textSize="10dp"
                android:id="@+id/j2t3"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tiro 4: 0"
                android:textSize="10dp"
                android:id="@+id/j2t4"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total: 0"
                android:textSize="10dp"
                android:id="@+id/j2total"
                />

        </LinearLayout>
    </LinearLayout>
        <!-- aqui jugados 3 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="JUGADOR 3"
                android:textSize="15dp"
                android:layout_gravity="left"
                />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/d0"
                android:layout_gravity="center"
                android:id="@+id/j3d1"
                android:layout_marginLeft="10dp"
                />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/d0"
                android:layout_gravity="center"
                android:id="@+id/j3d2"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="right"
                android:layout_marginLeft="10dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tiro 1: 0"
                    android:textSize="10dp"
                    android:id="@+id/j3t1"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tiro 2: 0"
                    android:textSize="10dp"
                    android:id="@+id/j3t2"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tiro 3: 0"
                    android:textSize="10dp"
                    android:id="@+id/j3t3"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tiro 4: 0"
                    android:textSize="10dp"
                    android:id="@+id/j3t4"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total: 0"
                    android:textSize="10dp"
                    android:id="@+id/j3total"
                    />

            </LinearLayout>
        </LinearLayout>

    <!--
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="BOTON DE PRUEBA"
        />
    -->
</LinearLayout>